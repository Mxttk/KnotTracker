<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/dark_charcoal"
    tools:context=".StartupSplash">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:contentDescription="@string/logo"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalGuideLine30percent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/knot_tracker_logo_white" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="@color/purple_200"
        android:fontFamily="@font/oxanium_bold"
        android:paddingTop="15dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:text="@string/please_sign_in_with_a_registered_account_below_or_register_a_new_knottracker_account_to_continue"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/scouts_purple"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalGuideLine40percent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalGuideLine30percent"
        tools:ignore="SmallSp,TextContrastCheck" />

    <Button
        android:id="@+id/buttonSignIn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="@drawable/splice_knot_two"
        android:elevation="10dp"
        android:fontFamily="@font/oxanium_bold"
        android:foregroundGravity="center"
        android:onClick="loginUser"
        android:paddingBottom="13dp"
        android:text="@string/sign_in"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="20sp"
        android:textStyle=""
        app:layout_constraintBottom_toTopOf="@+id/buttonRegister"
        app:layout_constraintDimensionRatio="3:1"
        app:layout_constraintEnd_toEndOf="@id/verticalGuideLine80percent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/verticalGuideLine20percent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="ButtonStyle,VisualLintButtonSize" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="@drawable/splice_knot_two"
        android:elevation="10dp"
        android:fontFamily="@font/oxanium_bold"
        android:onClick="regUser"
        android:text="@string/register"
        android:textColor="@color/purple_200"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonKnotListSplash"
        app:layout_constraintDimensionRatio="3:1"
        app:layout_constraintEnd_toEndOf="@id/verticalGuideLine80percent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/verticalGuideLine20percent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSignIn"
        tools:ignore="ButtonStyle,TextSizeCheck,VisualLintButtonSize" />

    <Button
        android:id="@+id/buttonKnotListSplash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="1dp"
        android:background="@drawable/splice_knot_two"
        android:elevation="10dp"
        android:fontFamily="@font/oxanium_bold"
        android:foregroundGravity="center"
        android:onClick="knotList"
        android:paddingBottom="13dp"
        android:text="@string/knot_list"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="20sp"
        android:textStyle=""
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintDimensionRatio="3:1"
        app:layout_constraintEnd_toEndOf="@id/verticalGuideLine80percent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/verticalGuideLine20percent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRegister"
        tools:ignore="ButtonStyle,TextSizeCheck,VisualLintButtonSize" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="@color/purple_200"
        android:fontFamily="@font/oxanium_bold"
        android:paddingStart="2dp"
        android:paddingTop="12dp"
        android:paddingEnd="2dp"
        android:text="@string/the_knot_list_is_visible_for_those_not_wanting_to_create_an_account"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/scouts_purple"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalGuideLine95percent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalGuideLine87percent"
        tools:ignore="SmallSp,TextContrastCheck" />


    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/scouts_purple"
        android:elevation="10dp"
        android:fontFamily="@font/oxanium_bold"
        android:paddingTop="6dp"
        android:text="@string/developed_by_brightsolutions"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalGuideLine95percent"
        tools:ignore="TextContrastCheck" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideLine30percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideLine40percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.60" />


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideLine87percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.87" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideLine95percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuideLine20percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuideLine80percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.80" />


</androidx.constraintlayout.widget.ConstraintLayout>